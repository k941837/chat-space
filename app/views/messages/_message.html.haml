.chat_main_contents_message
  .chat_main_contents_message_username
    .chat_main_contents_message_A_username
      = message.user.name
    .chat_main_contents_message_A_time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
.chat_main_contents_message_message-box
  - if message.content.present?
    %p.lower-message__content
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

